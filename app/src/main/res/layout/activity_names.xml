<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/p_15"
    tools:context="com.bithunters.NamesActivity">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="73dp"
        android:text="EMPLOYEE NAME"
        android:textColor="#F5EEEE"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="20dp"
        android:background="#F5EEEE"
        android:entries="@array/empnames"
        android:textColor="#0A0909" />

    <Button
        android:id="@+id/select"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView22"
        android:layout_marginBottom="138dp"
        android:layout_marginStart="56dp"
        android:background="#25CD9D"
        android:text="select name"
        android:textColor="#0A0909" />


</RelativeLayout>
